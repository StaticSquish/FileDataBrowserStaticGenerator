{% extends 'page.html.twig' %}

{% block content %}

	<ol class="breadcrumb">
		<li><a href="{{ '/' | internalLinkToDir }}">Home</a></li>
		<li class="active">Field: {{ fieldConfig.label }}</li>
	</ol>

	<h1>{{ fieldConfig.label }}</h1>

	<ul>
		{% for key, value in values %}
			<li>
				<a href="{{ ('/field/' ~ fieldKey ~ '/value/' ~ key) | internalLinkToDir }}">{{ value }}</a>
				<a href="{{ ('/field/' ~ fieldKey ~ '/value/' ~ key) | internalLinkToDir }}" class="btn btn-default">View</a>
			</li>
		{% endfor %}
		{% if rootDataWithNoValues %}
			<li>
				<a href="{{ ('/field/' ~ fieldKey ~ '/value/none') | internalLinkToDir }}">No Value</a>
				<a href="{{ ('/field/' ~ fieldKey ~ '/value/none') | internalLinkToDir }}" class="btn btn-default">View</a>
			</li>
		{% endif %}
	</ul>

{% endblock %}
